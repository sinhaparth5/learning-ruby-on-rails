<h1>Login</h1>

<%= form_with url: session_path, local: true do |form| %>
  <% if flash[:alert] %>
    <div class="error_messages">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>
